{
  "name": "mallu-magic-backend",
  "version": "1.0.0",
  "description": "Serverless backend for Mallu Magic inventory management",
  "main": "index.js",
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only server.ts",
    "dev:vercel": "vercel dev",
    "build": "tsc",
    "type-check": "tsc --noEmit",
    "create-admin": "node scripts/create-admin.js",
    "seed": "ts-node -r tsconfig-paths/register scripts/seed-data.ts",
    "start": "node -r tsconfig-paths/register dist/server.js",
    "lint:openapi": "redocly lint docs/openapi.yaml"
  },
  "dependencies": {
    "bcrypt": "^5.1.1",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.2",
    "module-alias": "^2.2.3",
    "mongodb": "^6.3.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@redocly/cli": "^2.12.3",
    "@types/bcrypt": "^5.0.2",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/module-alias": "^2.0.1",
    "@types/node": "^20.10.0",
    "dotenv": "^16.3.1",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.3.3",
    "vercel": "^34.0.0"
  },
  "engines": {
    "node": ">=18.x"
  }
}
